<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectUserDetailsActivity">

  <Button
      android:id="@+id/userDetailsBtn"
      android:layout_width="228dp"
      android:layout_height="86dp"
      android:text="User Details"
      android:textSize="28dp"
      android:fontFamily="casual"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.497"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.257" />

  <Button
      android:id="@+id/userListsBtn"
      android:layout_width="229dp"
      android:layout_height="83dp"
      android:text="User Lists"
      android:textSize="28dp"
      android:fontFamily="casual"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.498"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/userDetailsBtn"
      app:layout_constraintVertical_bias="0.129" />

  <Button
      android:id="@+id/friendsListsBtn"
      android:layout_width="324dp"
      android:layout_height="79dp"
      android:text="User Friends Lists"
      android:fontFamily="casual"
      android:textSize="28dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.494"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/userListsBtn"
      app:layout_constraintVertical_bias="0.221" />
</androidx.constraintlayout.widget.ConstraintLayout>